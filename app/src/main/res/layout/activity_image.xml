<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
<LinearLayout
	android:id="@+id/notConnectedLinLayout_image_activity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:visibility="gone" >

	<TextView
		android:id="@+id/txtTryAgain_image_activity"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/txt_try_again_nointernet" />

	<Button
		android:id="@+id/btnTryAgain_image_activity"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/btn_try_again" />
</LinearLayout>
	
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center">

	<ImageView
		android:id="@+id/image_big"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:adjustViewBounds="true" />

	<ProgressBar
		android:id="@+id/image_big_progress_bar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"/>
</LinearLayout>
</LinearLayout>
